import Test'Assert

import 'application'metric { Metric }
import 'json'metric

Serialize = \() none | error {
  Assert'Equal(
    metric'Serialize(metric()),
    "{\"id\":\"foo\",\"name\":\"bar\"}",
  )
}

Deserialize = \() none | error {
  m = metric()

  Assert'Equal(metric'Deserialize(metric'Serialize(m)), m)
}

metric = \() Metric {
  Metric{Id: "foo", Name: "bar"}
}
